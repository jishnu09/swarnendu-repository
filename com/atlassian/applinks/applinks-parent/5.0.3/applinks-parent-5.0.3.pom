    <properties>
        <maven.compiler.source>7</maven.compiler.source>
        <maven.compiler.target>7</maven.compiler.target>
        <failOnMilestoneOrReleaseCandidateDeps>false</failOnMilestoneOrReleaseCandidateDeps>

        <dev.mode>true</dev.mode>
        <skip.integration.tests>true</skip.integration.tests>
        <skip.unit.tests>false</skip.unit.tests>

        <!-- maven plugins  -->
        <amps.version>6.1.0</amps.version>
        <failsafe.version>2.9</failsafe.version>

        <!-- Atlassian deps -->
        <platform.version>3.0.0-m086</platform.version>
        <atlassian.analytics.version>3.21</atlassian.analytics.version>
        <atlassian.aui.version>5.8.15</atlassian.aui.version>
        <atlassian.soy.version>1.1.6</atlassian.soy.version>
        <atlassian.jslibs.version>0.5.0</atlassian.jslibs.version>

        <atlassian.webdriver.version>2.3-m09</atlassian.webdriver.version>
        <htmlsafe.osgi.import.version>1.4</htmlsafe.osgi.import.version>
        <darkfeatures.rest.version>0.6</darkfeatures.rest.version>

        <!-- 3rd party deps -->
        <spring.version>2.5.6</spring.version>
        <org.json.version>20080701</org.json.version>
        <junit.version>4.11</junit.version>
        <hamcrest.version>1.3</hamcrest.version>
        <reflections.version>0.9.10</reflections.version>
        <rest.assured.version>2.4.1</rest.assured.version>
        <slf4j.version>1.6.4</slf4j.version>

        <!-- Product versions -->
        <refapp.version>3.0.3</refapp.version>
        <jira.version>7.0.0-OD-06-002</jira.version>
        <confluence.version>5.8.6</confluence.version>
    </properties>

    <profiles>
        <!-- To run integration tests (ITs) -->
        <profile>
            <id>it</id>
            <properties>
                <skip.integration.tests>false</skip.integration.tests>
            </properties>
        </profile>

        <!-- Skip all tests when -DskipTests is on -->
        <profile>
            <id>skip-tests</id>
            <activation>
                <property>
                    <name>skipTests</name>
                </property>
            </activation>
            <properties>
                <skip.integration.tests>true</skip.integration.tests>
                <skip.unit.tests>true</skip.unit.tests>
            </properties>
        </profile>

        <!-- To disable dev mode -->
        <profile>
            <id>no-dev-mode</id>
            <properties>
                <dev.mode>false</dev.mode>
            </properties>
        </profile>

        <!-- This is for the CI build running integration tests. Disables dev mode and unit tests. -->
        <profile>
            <id>it.ci</id>
            <activation>
                <property>
                    <name>it.ci</name>
                </property>
            </activation>
            <properties>
                <skip.integration.tests>false</skip.integration.tests>
                <skip.unit.tests>true</skip.unit.tests>
                <dev.mode>false</dev.mode>
            </properties>
        </profile>

        <!-- This is for the CI build running smoke tests. It _should_ be just it.ci, but currently smoke tests
             need the dev mode flag on due to APLDEV-323. -->
        <profile>
            <id>it.ci.smoke</id>
            <activation>
                <property>
                    <name>it.ci.smoke</name>
                </property>
            </activation>
            <properties>
                <skip.integration.tests>false</skip.integration.tests>
                <skip.unit.tests>true</skip.unit.tests>
            </properties>
        </profile>

        <!-- Downgrade JIRA and Confluence to allow us to keep running builds in JDK 1.7 -->
        <!-- The most recent versions of JIRA and Confluence do not support either JDK 1.6, or both 1.6 and 1.7 -->
        <profile>
            <id>it.jdk7</id>
            <activation>
                <jdk>1.7</jdk>
            </activation>
            <properties>
                <jira.version>6.4.10</jira.version>
                <confluence.version>5.7.3</confluence.version>
                <!-- can be removed once we upgrade to 5.8.5+ APLDEV-335 -->
                <confluence.data.version>${confluence.version}</confluence.data.version>
            </properties>
        </profile>
    </profiles>

