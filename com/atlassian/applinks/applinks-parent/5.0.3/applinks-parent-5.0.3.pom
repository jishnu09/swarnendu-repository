    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>com.atlassian.maven.plugins</groupId>
                    <artifactId>maven-amps-plugin</artifactId>
                    <version>${amps.version}</version>
                    <extensions>true</extensions>
                    <configuration>
                        <skipAllPrompts>true</skipAllPrompts>
                        <systemPropertyVariables>
                            <upm.pac.disable>true</upm.pac.disable>
                            <atlassian.upm.server.data.disable>true</atlassian.upm.server.data.disable>
                        </systemPropertyVariables>
                    </configuration>
                </plugin>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-surefire-plugin</artifactId>
                    <configuration>
                        <skipTests>${skip.unit.tests}</skipTests>
                        <includes>
                            <include>**/Test*.java</include>
                            <include>**/*Test.java</include>
                        </includes>
                        <excludes>
                            <exclude>it/**/*</exclude>
                            <exclude>selenium/**/*</exclude>
                            <exclude>**/*$*</exclude>
                        </excludes>
                    </configuration>
                </plugin>
                <!-- override failsafe version: https://ecosystem.atlassian.net/browse/AMPS-927 -->
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-failsafe-plugin</artifactId>
                    <version>${failsafe.version}</version>
                    <configuration>
                        <skipITs>${skip.integration.tests}</skipITs>
                    </configuration>
                </plugin>
                <plugin>
                    <groupId>com.atlassian.maven.plugins</groupId>
                    <artifactId>maven-amps-dispatcher-plugin</artifactId>
                    <version>${amps.version}</version>
                </plugin>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-enforcer-plugin</artifactId>
                    <executions>
                        <execution>
                            <id>ban-milestones-and-release-candidates</id>
                            <phase>validate</phase>
                            <goals>
                                <goal>enforce</goal>
                            </goals>
                            <configuration>
                                <rules>
                                    <banVersionDeps>
                                        <excludes>
                                            <exclude>com.atlassian.jira:jira-rest-java-client-api:jar:2.0.0-m25</exclude>
                                            <exclude>com.google.inject:guice:jar:3.0-rc2</exclude>
                                            <exclude>com.atlassian.confluence.plugins:confluence-functest-rest-plugin:jar:5.7-m1</exclude>
                                            <exclude>com.atlassian.confluence.plugins:confluence-functest-http-validation-plugin:jar:5.7-m1</exclude>
                                            <exclude>com.atlassian.confluence.plugins:confluence-rpc-plugin:jar:5.7-m1</exclude>
                                            <exclude>com.atlassian.confluence:confluence-upgrade:jar:5.7-m1</exclude>
                                            <exclude>com.atlassian.confluence:confluence-java-api:jar:5.7-m1</exclude>
                                            <exclude>com.atlassian.confluence:confluence-testutils:jar:5.7-m1</exclude>
                                            <exclude>com.atlassian.confluence.plugins:confluence-functestxss-plugin:jar:5.7-m1</exclude>
                                            <exclude>com.atlassian.confluence.plugins:confluence-scriptsfinished-plugin:jar:5.7-m1</exclude>
                                            <exclude>com.atlassian.confluence.plugins:confluence-ondemand-crowd-proxy-plugin:jar:5.7-m1</exclude>
                                            <exclude>com.atlassian.confluence:confluence-webdriver-test:jar:5.7-m1</exclude>
                                            <exclude>com.atlassian.selenium:atlassian-visual-comparison:jar:2.2-m01</exclude>
                                            <exclude>com.atlassian.confluence:confluence-not-shippable:jar:5.7-m1</exclude>
                                            <exclude>com.atlassian.confluence:confluence-rest-api:jar:5.7-m1</exclude>
                                            <exclude>com.atlassian.selenium:atlassian-webdriver-core:jar:2.2-m01</exclude>
                                            <exclude>org.apache.mina:mina-core:jar:2.0.0-RC1</exclude>
                                            <exclude>com.octo.captcha:jcaptcha-all:jar:1.0-RC6</exclude>
                                            <exclude>com.atlassian.confluence:confluence-test-support:jar:5.7-m1</exclude>
                                            <exclude>com.atlassian.gadgets:atlassian-gadgets-pageobjects:jar:3.2.0-m4</exclude>
                                            <exclude>com.atlassian.confluence.plugins:confluence-functestrpc-plugin:jar:5.7-m1</exclude>
                                            <exclude>com.atlassian.selenium:atlassian-pageobjects-api:jar:2.2-m01</exclude>
                                            <exclude>com.atlassian.confluence:confluence-rest-client:jar:5.7-m1</exclude>
                                            <exclude>rhino:js:jar:1.5R4-RC3</exclude>
                                            <exclude>com.atlassian.confluence:atlassian-confluence-pageobjects:jar:5.7-m1</exclude>
                                            <exclude>com.atlassian.selenium:atlassian-pageobjects-elements:jar:2.2-m01</exclude>
                                            <exclude>com.atlassian.jira:jira-rest-java-client-core:jar:2.0.0-m25</exclude>
                                            <exclude>com.atlassian.confluence:confluence-webdriver-support:jar:5.7-m1</exclude>
                                            <exclude>com.atlassian.confluence:confluence:jar:5.7-m1</exclude>
                                            <exclude>com.atlassian.confluence:confluence-bucket:jar:5.7-m1</exclude>
                                            <exclude>com.atlassian.confluence:confluence-rest-serialization:jar:5.7-m1</exclude>
                                        </excludes>
                                    </banVersionDeps>
                                </rules>
                            </configuration>
                        </execution>
                    </executions>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>

